    <FormLabel htmlFor='difficulty'>Difficulty</FormLabel>
    <FormSelect
      id='difficulty'
      value={difficulty}
      onChange={e => {
        const newValue = e.target.value;
        setDifficulty(newValue);
        setFormValues({ difficulty: newValue });
      }}
    >
      {difficultyOptions.map(option => (
